{
  "name": "recipe-rest-api",
  "version": "1.0.0",
  "description": "A sandbox express project",
  "main": "dist/app.js",
  "engines": {
    "node": "18"
  },
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "migrate": "npx ts-node ./node_modules/knex/bin/cli.js --knexfile='./src/knexfile.ts' migrate:latest",
    "migrate.fresh": "npx ts-node ./node_modules/knex/bin/cli.js --knexfile='./src/knexfile.ts' migrate:rollback --all && npm run migrate",
    "start": "npx nodemon --exec \"node --inspect=0.0.0.0:9229 -r ts-node/register src/server.ts\"",
    "run-prod": "npx ts-node --transpile-only src/server.ts",
    "test": "npm run migrate.fresh && NODE_OPTIONS=\"--loader ts-node/esm\" mocha -r ts-node/register -r test/setup.ts -r test/hooks.ts test/*.test.ts test/**/*.test.ts",
    "watch": "tsc -w"
  },
  "author": "Ryan Brown",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.0.0",
    "ajv": "^8.0.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.0.0",
    "cheerio": "^1.0.0-rc.3",
    "commander": "^10.0.0",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-session": "^1.17.0",
    "jsonld": "^8.1.1",
    "knex": "^2.0.0",
    "method-override": "^3.0.0",
    "microdata-node": "^2.0.0",
    "moment": "^2.29.3",
    "node-fetch": "^2.6.0",
    "objection": "^3.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.0",
    "striptags": "^3.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.17.0",
    "@types/json-schema": "^7.0.11",
    "@types/jsonld": "^1.5.1",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^10.0.0",
    "@types/node-fetch": "^2.6.0",
    "@types/passport": "^1.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.12",
    "debug": "^4.3.4",
    "fishery": "^2.2.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.16",
    "schema-dts": "^1.1.0",
    "supertest": "^6.2.4"
  }
}
